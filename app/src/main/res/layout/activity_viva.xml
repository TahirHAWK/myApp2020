<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg2"
    tools:context=".VivaActivity">

    <TextView
        android:id="@+id/tvheading"
        android:layout_width="286dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_button2"
        android:text="Submit students roll and marks for their exam:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <Button
        android:id="@+id/btnSubmitMarks"
        android:layout_width="123dp"
        android:layout_height="76dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/custom_button"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnEditPreviousMark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEditPreviousMark"
        android:layout_width="166dp"
        android:layout_height="76dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/custom_button"
        android:text="Edit Previous"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etRollst"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:hint="ID number"
        app:layout_constraintBottom_toTopOf="@+id/etMarksST"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvheading" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etMarksST"
        android:layout_width="317dp"
        android:layout_height="45dp"
        android:hint="Marks"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmitMarks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvheading" />
</androidx.constraintlayout.widget.ConstraintLayout>